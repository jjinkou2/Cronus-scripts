combo cb_Send_Input{
    set_val(dbyte(VAR1),100);

    wait(100);

    set_val(dbyte(VAR1),0);
    wait(dbyte(VAR1 + 1) * 50);
}


/*-----------------------*/
/*      Functions         */
/*------------------------*/

function SwitchLED(Color){
    // Find the correct color
    if (Color==GREEN) {
        set_led(LED_1, 0);
        set_led(LED_2, 0);
        set_led(LED_3, 1);
    }
    else if (Color==BLUE){
        set_led(LED_1, 1);
        set_led(LED_2, 0);
        set_led(LED_3, 0);
    }
    else if (Color==RED_BLINK){
        set_led(LED_1, 0);
        set_led(LED_2, 2);
        set_led(LED_3, 0);
    }
}

function DebugState(idx_Data) {
    VAR1 = idx_Data;
    combo_run(cb_Test);
}

// Returns the starting index of a combo

function get_combo_index(combo_id) {
    i = 0;
    while(TRUE) {//-----------------------
        v = dbyte(i);
        if(v == combo_id) {
            return(i + 1);
        } else {//====================
            while(v != EOC && v != EOD) {//#
                i = i + 1;
                v = dbyte(i);
            }//#
            if(v == EOD) break;
            else i = i + 1;
        }//=============================
    }//-----------------------------------
    return(-1);
}

function run_State(combo_to_run,next) {
    idx_step    = get_combo_index(combo_to_run) + 1 ;
    State       = S_Play_Combo;
    Next_State  = next;

}
